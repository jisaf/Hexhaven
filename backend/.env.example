# Hexhaven Backend Environment Configuration

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=0.0.0.0

# Database Configuration
# Local development database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/hexhaven_dev?schema=public"

# CORS Configuration
# Frontend dev server URL
CORS_ORIGIN=http://localhost:5173

# Session Configuration
# Use a simple secret for development
SESSION_SECRET=dev-secret-change-in-production

# WebSocket Configuration
WS_PATH=/socket.io

# Logging
LOG_LEVEL=debug

# Frontend URLs
FRONTEND_URL=http://localhost:5173

# Campaign Configuration
# Token TTL in days (default: 7 days)
CAMPAIGN_INVITE_TOKEN_TTL_DAYS=7
# Direct invitation TTL in days (default: 30 days)
CAMPAIGN_DIRECT_INVITATION_TTL_DAYS=30
